#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BUTTON in
	1) setsid -f st -e pulsemixer ;;
	3) st -e nvim /home/zeos/Github/dwmblocks/scripts/sb_volume ;;
    4) st -e cmus;;
esac

vol="$(pactl list sinks | grep '^[[:space:]]Volume:' | \
    head -n $(( $SINK + 2 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,')"

vol="${vol#Volume: }"
split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}
vol="$(split "$vol" ".")"
vol="${vol##0}"

case 1 in
	$((vol >= 70)) ) icon="ï©½" ;;
	$((vol >= 30)) ) icon="ï©¿" ;;
	$((vol >= 1)) ) icon="ï©¾" ;;
	* ) echo ïª€ && exit ;;
esac

echo "$icon $vol%"
